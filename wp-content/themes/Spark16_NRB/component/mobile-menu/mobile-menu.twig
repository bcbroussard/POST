<div id="mobile-menu" class="spark-mobile-nav">
  <nav> 
    <ul>
      {% for item in main.nav.get_items %}
        {% if item.get_children %}
        <li class="has-children">
          <a href="#">{{item.title}}</a>
          <ul class="secondary-menu">
            <button class="back"></button>
            <li class="menu-head"><a href="#">{{item.title}}</a></li>
            {% for child in item.get_children %}
              {% if child.get_children %}
              <li class="has-children">
                  <a href="#">{{child.title}}</a> 
                  <ul class="tertiary-menu">
                    {% for child in child.get_children %}
                      <li><a href="{{child.get_link}}">{{child.title}}</a></li>
                    {% endfor %}
                  </ul>
              {% else %} 
              <li>
                <a href="{{child.get_link}}">{{child.title}}</a> 
              {% endif %}
              </li>
              {% endfor %}
          </ul>
        {% else %}
        <li>
          <a href="{{item.get_link}}">{{item.title}}</a>
        {% endif %}
      </li>
      {% endfor %}
    </ul>
    <ul class="sub-menu">
      {% for item in sub.nav.get_items %}
        {# {{ dump(item) }} #}
           <a href="{{item.get_link}}" class= "{{ item.post_name }} {{ item.class }}">{{item.title}}</a>
      {% endfor %}
    </ul>
  </nav>
</div>